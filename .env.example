# ================================================================
#  PureMark Configuration
# ================================================================
# Copy this file to .env and fill in your values
# NEVER commit .env to version control!

# ================================================================
#  REQUIRED: OpenAI API Key
# ================================================================
# Get yours at: https://platform.openai.com/api-keys
OPENAI_API_KEY=your-openai-api-key-here

# ================================================================
#  Server Configuration
# ================================================================
# Port for the Flask backend server
PORT=5000

# Host to bind to (0.0.0.0 allows external connections)
HOST=0.0.0.0

# Enable debug mode (enables verbose logging)
# Set to 'false' in production
DEBUG=true

# ================================================================
#  Image Processing Limits
# ================================================================
# Maximum image size in bytes (default: 10MB)
MAX_IMAGE_SIZE=10485760

# Maximum image dimension (width or height) in pixels
MAX_IMAGE_DIMENSION=4096

# ================================================================
#  Mobile App Configuration (for app.config.js)
# ================================================================
# API URL for the mobile app to connect to backend
# Development examples:
#   - Android emulator: http://10.0.2.2:5000
#   - iOS simulator: http://localhost:5000
#   - Physical device: http://YOUR_LOCAL_IP:5000
# Production: https://api.yourdomain.com
API_URL=http://10.0.2.2:5000
